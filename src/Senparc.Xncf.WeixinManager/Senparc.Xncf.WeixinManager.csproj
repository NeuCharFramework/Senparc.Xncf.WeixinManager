		<PackageReference Include="Senparc.Ncf.Database.Sqlite" Version="0.13.3.3-beta1" />

	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="App_Data\ApiDocXml\Senparc.WebSocket.xml">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</EmbeddedResource>
