		</EmbeddedResource>
		<EmbeddedResource Update="wwwroot\js\swagger.js">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="OHS\Local\" />
	</ItemGroup>

